<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments from other users "
        android:textStyle="bold|italic"
        android:textSize="22sp"/>
    <androidx.fragment.app.FragmentContainerView
        android:layout_marginTop="20dp"
        android:id="@+id/frameLayoutComments"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some Suggested Places "
        android:textStyle="bold|italic"
        android:textSize="22sp"/>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frameLayoutSuggestedPlace"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayoutHosts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hosts in the city  "
        android:textStyle="bold|italic"
        android:textSize="22sp"/>
    <androidx.fragment.app.FragmentContainerView
        android:layout_marginTop="20dp"
        android:id="@+id/frameLayoutHosts"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayoutGuides"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guides Details "
        android:textStyle="bold|italic"
        android:textSize="22sp"/>
    <androidx.fragment.app.FragmentContainerView
        android:layout_marginTop="20dp"
        android:id="@+id/frameLayoutGuides"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayoutComments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>
</ScrollView>

